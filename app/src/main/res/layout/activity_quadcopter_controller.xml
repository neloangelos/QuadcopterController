<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".QuadcopterControllerActivity">


    <com.skandi.quadcoptercontroller.JoystickView
        android:layout_alignParentTop="true"
        android:id = "@+id/JoystickViewleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <com.skandi.quadcoptercontroller.JoystickView
        android:layout_alignParentTop="true"
        android:id = "@+id/JoystickViewright"
        android:layout_toRightOf="@+id/JoystickViewleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView android:text="@string/hello_world"
        android:layout_below="@+id/JoystickViewleft"
        android:id="@+id/angleTextView"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:text="@string/hello_world"
        android:id="@+id/powerTextView"
        android:layout_below="@+id/angleTextView"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
