<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".QuadcopterControllerActivity">

    <TextView android:text="@string/hello_world"
        android:layout_alignParentTop="true"
        android:id="@+id/angleTextViewLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:text="@string/hello_world"
        android:id="@+id/powerTextViewLeft"
        android:layout_below="@+id/angleTextViewLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:text="@string/hello_world"
        android:layout_alignParentTop="true"
        android:id="@+id/angleTextViewRight"
        android:layout_toRightOf="@+id/angleTextViewLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:text="@string/hello_world"
        android:id="@+id/powerTextViewRight"
        android:layout_toRightOf="@+id/angleTextViewLeft"
        android:layout_below="@+id/angleTextViewRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.skandi.quadcoptercontroller.JoystickView
        android:id = "@+id/JoystickViewLeft"
        android:layout_below="@+id/powerTextViewLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <com.skandi.quadcoptercontroller.JoystickView
        android:id = "@+id/JoystickViewRight"
        android:layout_below="@+id/powerTextViewRight"
        android:layout_toRightOf="@+id/JoystickViewLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</RelativeLayout>
